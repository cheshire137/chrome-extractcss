{
  "manifest_version": 2,
  "name": "extractcss",
  "description": "This extension lets you extract the CSS classes, IDs, and inline styles from web pages, generating a stub CSS file for use with web development.",
  "version": "0.0.0.1",
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*", "<all_urls>", "file:///*"],
      "js": ["jquery-2.0.3.min.js", "extractcss.js", "cssbeautify.min.js",
             "jquery.icheck.min.js", "prism.js", "popup.js",
             "content_script.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "default_title": "Extract CSS"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
